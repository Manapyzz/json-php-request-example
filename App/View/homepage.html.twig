<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>Homepage</title>
</head>
<body>
    <h1>Welcome on cryptoland !</h1>

    <div class="mb-3">
        <label for="search" class="form-label">Account Number</label>
        <input type="text" class="form-control" id="search" name="search" placeholder="XXXXXXXXX">
    </div>

    <div id="account-list">
        {% include 'account-list.html.twig' %}
    </div>

    <script>
        let searchInput = document.querySelector('#search')
        let accountListBlock = document.querySelector('#account-list')

        searchInput.addEventListener('input', function(evt) {
            fetch(`/search/account?search=${this.value}`)
                .then(response => response.text())
                .then(data => {
                    console.log(data)
                    accountListBlock.innerHTML = data
                })
        })

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>